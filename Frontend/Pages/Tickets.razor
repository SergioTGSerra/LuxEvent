@page "/Tickets"
<h3>Categories</h3>
@inject IJSRuntime JsRuntime

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Add Ticket
</button>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Evento</th>
      <th scope="col">Tiket Type</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<!-- Add Category Modal -->
<div class="modal fade" id="addTicketModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add Ticket</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <label for="categoryNameInput" class="form-label">Name</label>
            <input type="text" class="form-control" id="categoryNameInput" aria-describedby="emailHelp">
          </div>
          <div class="mb-3">
            <label for="eventCreatedByInput" class="form-label">Created By</label>
            <select class="form-control" id="eventEditCreatedByInput"></select>
          </div>
          <div class="mb-3">
            <label for="eventCategoryInput" class="form-label">Category</label>
            <select class="form-control" id="eventEditCategoryInput"></select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="CreateCategory()">Create Category</button>
      </div>
    </div>
  </div>
</div>

@code
{
  protected override async Task OnAfterRenderAsync(bool firstRender)
  {
    await JsRuntime.InvokeVoidAsync("getTickets");
  }
}